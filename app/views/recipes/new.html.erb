<h1>Recipes#new</h1>
<p>Find me in app/views/recipes/new.html.erb</p>

<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        新規レシピ作成
      </h1>
    </div>
  </div>
</section>


<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= form_with model: @recipe do |f| %>
          <div class="field">
            <%= f.label :title, "レシピ名", class: "label" %>
            <%= f.text_field :title, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :body, "作り方", class: "label" %>
            <%= f.text_area :body, class: "textarea" %>
          </div>
   
            <%# 料理写真を追加する %>
            <%= f.submit '投稿', class: "button is-success" %>
        <% end %>
      </div>
    </div>
  </div>
</section>


<div class="contents">
  <%= form_with url: 'search', class: 'js-form', local: false do |f| %>
    <%= f.text_field :name %>
    <%= f.text_field :num%>
    <%= f.submit %>
  <% end %>
</div>
<ul class="result">
  
</ul>

